.outer
  position: absolute
  bottom: 8%
  left: calc(50% - 50px)
  padding: 10px
  width: 90px
  height: 90px
  border: 6px solid white
  border-radius: 50%
  background-color: white
  background-clip: content-box
  box-shadow: 8px 8px 12px rgba(0, 0, 0, 0.3)
  cursor: pointer

  &:hover
    background-color: lightgrey
